<div class="col-lg-12 col-md-12 form-group">
  <button class="btn btn-success" type="button" {{action 'saveUrl'}} disabled={{model.formSmallInvalid}}>Добавить ссылку</button>
</div>
<div class="col-lg-8 col-md-8">
  <div class="{{ if model.pathValid 'form-group has-success' 'form-group has-error' }}">
    <label for="path">
      {{model.pathTitle}}
    </label>
    {{input value=model.path class="main-input form-control" placeholder=placeholder}}
    {{#unless model.pathValid}}
      <span class="help-block">Ссылка обязательна</span>
    {{/unless}}
  </div>
</div>
