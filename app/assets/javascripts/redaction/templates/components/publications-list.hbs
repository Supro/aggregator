{{input value=titleFilter class="form-control title-filter" placeholder="Поиск"}}
{{#each filteredPublications as |publication|}}
  {{publication-element publication=publication store=store publications=publications box=box category=category}}
{{/each}}

<div class="show-more">
  {{#if canLoadMore}}
    <a class="btn btn-primary" {{action 'getMore'}}>
      {{#if loading}}
        Загрузка
      {{else}}
        Еще
      {{/if}}
    </a>
  {{/if}}
</div>
