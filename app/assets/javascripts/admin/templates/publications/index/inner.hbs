<table class="table table-striped publications-table">
  <thead>
    <tr>
      <th>Дата</th>
      <th>Заголовок</th>
      <th>Просмотры</th>
      <th>Редактор</th>
    </tr>
  </thead>
  <tbody>
    {{#each model as |publication|}}
      <tr>
        <td class="time">{{publication.timeFullLLL}}</td>
        <td>
          {{#link-to 'publications.show' publication.id class="title"}}
            {{publication.title}}
          {{/link-to}}
          <div class="type">
            Новость
          </div>
        </td>
        <td class="views">25</td>
        <td class="author">Будников Роман</td>
      </tr>
    {{/each}}
  </tbody>
</table>
